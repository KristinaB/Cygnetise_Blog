{{!

	POST TEMPLATE
	- Configuration of this file is not required.

}}
{{!< default}}


	{{#post}}

		{{#has tag="leftsidebar, rightsidebar, fullwidth"}}
			{{#has tag="leftsidebar"}}
				<div class="wrapper leftsidebar">
			{{/has}}
			{{#has tag="rightsidebar"}}
				<div class="wrapper rightsidebar">
			{{/has}}
			{{#has tag="fullwidth"}}
				<div class="wrapper fullwidth">
			{{/has}}
		{{else}}
			<div class="wrapper">
		{{/has}}

			<div class="{{post_class}}">
				<div style="text-align:center"><img src="/assets/img/cygnetise_logo_text_black.png" width="550" style="margin: 0 auto">
					</div>
				<article>

					{{> header_post}}

					{{> post_title}}

					<div class="postbody">
						{{content}}
					</div>

					{{> post_footer}}

					{{> widget_authorinfo}}

				</article>

				{{> post_lower}}

			</div>

			{{> sidebar_post}}

		</div>

	{{/post}}
