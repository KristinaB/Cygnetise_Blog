{{!< default}}

	<div class="wrapper">
		<header class="alternate">
			{{#if author.image}}
			<div class="profile">
				<img src="{{author.image}}" alt="{{author.name}}">
			</div>
			{{/if}}
			<div class="info">
				<span>Author</span>
				<h1>{{author.name}}</h1>
			</div>
			<a href="{{@blog.url}}"><i class="fa fa-times"></i></a>
		</header>
	</div>

	{{> postlist}}
