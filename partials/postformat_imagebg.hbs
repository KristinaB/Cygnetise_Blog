{{!

	POST FORMAT - IMAGE BACKGROUND
	- Configuration of this file is not required.

}}

	<article class="{{post_class}} postinlist standard single imagebackground">
		{{#if image}}<div class="background" style="background-image:url('{{image}}'); opacity: 0.35;"></div>{{/if}}
		<div class="inner">
			<div class="category">
				{{tags separator=""}}
			</div>
			<h2 class="title"><a href="{{url}}">{{{title}}}</a></h2>
			<hr>
			<div class="stats">
				<div class="author">
					{{#author}}
					<a href="{{url}}">{{#if image}} <img src="{{image}}" alt="{{name}}" class="minigravatar">{{/if}}{{name}}</a>
					{{/author}}
				</div>
			</div>
		</div>
	</article>
